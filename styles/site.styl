@import url('https://fonts.googleapis.com/css?family=Monda:400,70')
body
    background white
    font-family 'Monda', sans-serif

.logo
    width 100px
    height 100px

.pizza-menu
    padding 2%
    display flex
    justify-content space-around

.pizza-list
    width 50%

.pizza-item
    padding 10px
    border 2px solid black
    margin-bottom 10px
    display flex

.pizza-profile

    img:hover
        position relative
        transform scaleX(2) scaleY(2)
        transition transform 0.5s ease

.pizza-info
    width 33%
    margin-left 20px

.price-tag
    font-size 2.5em
    display flex
    margin-left 20px

    span
        margin auto


.add-order-button
    color #ee
    width 150px
    padding 8px 0
    margin-top 20px
    text-align center
    border-radius 5px
    background #0b3a0c
    transition background 0.5s ease-in

.add-order-button:hover
        color #00
        background #cbc9d0

.thumbnail
    width 150px
    height 100px

.invoice
    width 40%
    border 2px solid black

    h2, .invoice-total
        font-size 2.5em

    h2, h3, .invoice-item, .invoice-total
        text-align right
        margin-right 20px


.invoice-item
    margin-right 20px
    font-size 1.5em

.invoice-heading 
    color #ee
    background #45485a
    
    h2
        text-align center

.total
    display flex
    justify-content flex-end

.orderItem
    animation-duration 1s
    animation-name slidein

@keyframes slidein {
    from {
       width 0 
       opacity 0     
    }

    to {
        width 100%
        opacity 1
    }
}
